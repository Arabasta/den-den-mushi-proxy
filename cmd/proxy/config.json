{
  "app": {
    "name": "den-den-mushi-proxy",
    "environment": "dev",
    "version": "1.0.0",
    "port": 45007
  },
  "ssl": {
    "enabled": false
  },
  "host": {
    "name": "ddm-proxy",
    "ip": "127.0.0.1"
  },
  "development": {
    "isSMX": true,
    "UseSqlJtiRepo": true,
    "UseRedis": false,
    "SshTestKeyPath": "/Users/kei/Desktop/repos/ddm-proxy-tmp/ephemeral-ssh4192716415/id_ed25519",
    "IsUsingInvDb": true,
    "IsAutoMigrateEnabled": false
  },
  "logger": {
    "level": "debug",
    "format": "console",
    "output": "both",
    "filePath": "./log/ddm-proxy.log"
  },
  "Cors": {
    "allowOrigins": ["*"],
    "allowMethods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"],
    "allowHeaders": ["Authorization", "Content-Type", "X-Requested-With"],
    "exposeHeaders": [],
    "allowCredentials": true,
    "allowMaxAge": 3600
  },
  "Puppet": {
    "Endpoints": [
      "https://puppet-green.example.com/api/v1",
      "https://puppet-blue.example.com/api/v1"
    ],
    "TaskTimeoutSeconds": 120,
    "RetryAttempts": 3
  },
  "JwtAudience": {
      "ExpectedIssuer": "control-server",
      "ExpectedAudience": "OS",
      "ExpectedTyp": "proxy/ws+jwt"
  },
  "Websocket": {
    "PingPong": {
      "PingIntervalSeconds": 30,
      "PingTimeoutSeconds": 10,
      "MaxPingMissed": 10,
      "PongWaitSeconds": 10
    }
  },
  "DdmDB": {
    "user": "root",
    "port": 3306,
    "dbName": "DenDenMushi",
    "params": "charset=utf8mb4&parseTime=True&loc=Local",
    "maxIdleConns": 2,
    "maxOpenConns": 10,
    "connMaxLifetimeMinutes": 30,
    "sslEnabled": false
  },
  "InvDB": {
    "user": "root",
    "port": 4506,
    "dbName": "invent",
    "params": "charset=utf8mb4&parseTime=True&loc=Local",
    "maxIdleConns": 1,
    "maxOpenConns": 10,
    "connMaxLifetimeMinutes": 30,
    "sslEnabled": true
  },
  "redis": {
    "addr": "127.0.0.1",
    "port": 6379,
    "poolSize": 10
  }
}
