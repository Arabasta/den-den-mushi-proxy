{
  "app": {
    "name": "den-den-mushi-proxy",
    "environment": "dev",
    "version": "1.0.0",
    "port": 45007
  },
  "ssl": {
    "enabled": true
  },
  "host": {
    "name": "ddm-proxy",
    "ip": "127.0.0.1"
  },
  "development": {
    "isSMX": true,
    "UseSqlJtiRepo": true,
    "UseRedis": false,
    "IsUsingInvDb": true,
    "IsAutoMigrateEnabled": false,
    "RegexDbPollIntervalSeconds": 30
  },
  "logger": {
    "level": "debug",
    "format": "console",
    "output": "both",
    "filePath": "./log/ddm-proxy.log"
  },
  "Cors": {
    "allowOrigins": ["*"],
    "allowMethods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"],
    "allowHeaders": ["Authorization", "Content-Type", "X-Requested-With"],
    "exposeHeaders": [],
    "allowCredentials": true,
    "allowMaxAge": 3600
  },
  "Puppet": {
    "TaskRetrySeconds": 5,
    "RetryAttempts": 3
  },
  "JwtAudience": {
      "ExpectedIssuer": "control-server",
      "ExpectedAudience": "OS",
      "ExpectedTyp": "proxy/ws+jwt"
  },
  "Websocket": {
    "PingPong": {
      "PingIntervalSeconds": 30,
      "PingTimeoutSeconds": 10,
      "MaxPingMissed": 10,
      "PongWaitSeconds": 10
    }
  },
  "DdmDB": {
    "user": "root",
    "port": 3306,
    "dbName": "DenDenMushi",
    "params": "charset=utf8mb4&parseTime=True&loc=Local",
    "maxIdleConns": 2,
    "maxOpenConns": 10,
    "connMaxLifetimeMinutes": 30,
    "sslEnabled": false,
    "logLevel": 4
  },
  "InvDB": {
    "user": "sstdbdbrw04",
    "port": 4405,
    "dbName": "invent",
    "params": "charset=utf8mb4&parseTime=True&loc=Local",
    "maxIdleConns": 1,
    "maxOpenConns": 10,
    "connMaxLifetimeMinutes": 30,
    "sslEnabled": true,
    "logLevel": 4
  },
  "redis": {
    "port": 6379,
    "poolSize": 10
  },
  "SshKey": {
    "IsLocalSshKeyEnabled": true
  },
  "CookieTmp": {
    "Name": "ddm-proxy-cookie-tmp",
    "Redirect": "ddm.com/login",
    "UserIdKey": "username",
    "Secret": "ddm-proxy-secret"
  }
}
