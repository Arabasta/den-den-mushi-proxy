{
  "app": {
    "name": "den-den-mushi-control",
    "environment": "dev",
    "version": "1.0.0",
    "port": 55007,
    "IsLocalHost": true
  },
  "development": {
    "isSMX": true,
    "skipPolicyChecks": false,
    "IsUsingInvDb": true,
    "IsAutoMigrateEnabled": false,
    "IsLocalSshKeyIfNotIsPuppetKey": false,
    "TargetSshPort": "64022"
  },
  "ssl": {
    "enabled": true
  },
  "Cors": {
    "isEnabled": true,
    "allowOrigins": ["https://frontend.com:45006"],
    "allowMethods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"],
    "allowHeaders": ["Authorization", "Content-Type", "X-Requested-With"],
    "exposeHeaders": ["ETag"],
    "allowCredentials": false,
    "allowMaxAge": 600
  },
  "Security": {
    "isEnabled": true,
    "enforceCsp": true,
    "allowStyleAttribute": false,
    "connectSrc": [
      "http://localhost:55007",
      "ws://localhost:45007"
    ]
  },
  "Swagger": {
    "IsEnabled": true,
    "Title": "Den Den Mushi Control API"
  },
  "Pprof": {
    "IsEnabled": false,
    "Port": 6060
  },
  "Logger": {
    "level": "debug",
    "format": "console",
    "output": "both",
    "filePath": "./log/ddm-control.log"
  },
  "JwtIssuer": {
    "Issuer": "control-server",
    "ExpirySeconds": 120
  },
  "DdmDB": {
    "user": "root",
    "port": 3306,
    "dbName": "DenDenMushi",
    "params": "charset=utf8mb4&parseTime=True&loc=Local",
    "maxIdleConns": 2,
    "maxOpenConns": 10,
    "connMaxLifetimeMinutes": 30,
    "sslEnabled": false,
    "logLevel": 4
  },
  "InvDB": {
    "user": "",
    "port": 4405,
    "dbName": "",
    "params": "charset=utf8mb4&parseTime=True&loc=Local",
    "maxIdleConns": 1,
    "maxOpenConns": 10,
    "connMaxLifetimeMinutes": 30,
    "sslEnabled": true,
    "logLevel": 4
  },
  "redis": {
    "port": 6379,
    "poolSize": 10
  },
  "OuGroup": {
    "IsValidationEnabled": true,
    "Prefix_V1": {
      "L1": "L1",
      "L2_L3": "L2_L3"
    }
  },
  "Tmpauth": {
    "IsEnabled": false,
    "UserIdKey": "username",
    "OuGroupKey": "ou"
  },
  "LoadBalancer": {
    "Algorithm": "power_of_2_random",
    "RefreshIntervalSeconds": 15,
    "Filters": {
      "CapacityFilter": {
        "IsEnabled": true
      },
      "HealthFilter": {
        "IsEnabled": true,
        "UnhealthyThresholdSeconds": 20
      },
      "DeploymentColorFilter": {
        "IsEnabled": false,
        "AcceptedColor": "all"
      },
      "DrainFilter": {
        "IsEnabled": false
      }
    }
  }
}
