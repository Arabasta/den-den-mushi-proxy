{
  "app": {
    "name": "den-den-mushi-control",
    "environment": "dev",
    "version": "1.0.0",
    "port": 55007
  },
  "development": {
    "useInMemoryRepository": true,
    "skipPolicyChecks": false,
    "IsUsingInvDb": false,
    "IsAutoMigrateEnabled": true,
    "IsBlacklistFilter": false
  },
  "ssl": {
    "enabled": false
  },
  "Cors": {
    "allowOrigins": ["*"],
    "allowMethods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"],
    "allowHeaders": ["Authorization", "Content-Type", "X-Requested-With"],
    "exposeHeaders": [],
    "allowCredentials": true,
    "allowMaxAge": 3600
  },
  "Logger": {
    "level": "debug",
    "format": "console",
    "output": "both",
    "filePath": "./log/ddm-control.log"
  },
  "JwtIssuer": {
    "Issuer": "control-server",
    "Secret": "peanut",
    "ExpirySeconds": 120
  },
  "DdmDB": {
    "user": "root",
    "port": 3306,
    "dbName": "DenDenMushi",
    "params": "charset=utf8mb4&parseTime=True&loc=Local",
    "maxIdleConns": 2,
    "maxOpenConns": 10,
    "connMaxLifetimeMinutes": 30
  },
  "InvDB": {
    "user": "root",
    "port": 4506,
    "dbName": "Invent",
    "params": "charset=utf8mb4&parseTime=True&loc=Local",
    "maxIdleConns": 1,
    "maxOpenConns": 10,
    "connMaxLifetimeMinutes": 30
  },
  "redis": {
    "addrs": [
      "127.0.0.1:7000",
      "127.0.0.1:7001",
      "127.0.0.1:7002"
    ],
    "port": 6379,
    "password": "secret",
    "poolSize": 10
  }
}
